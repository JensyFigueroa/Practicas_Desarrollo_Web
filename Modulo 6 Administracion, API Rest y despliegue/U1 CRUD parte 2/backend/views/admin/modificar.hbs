{{!-- 6.- Creamos el formulario para modificar los campos de las novedades --}}
<div class="container" style="margin-top: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h2>Modificar novedad</h2>

            {{!-- 7.- Agremos la action a la ruta de modificar --}}
            <form action="/admin/novedades/modificar" method="post">

                {{!-- 8.- Pasamos el ID en un input de type HIDDEN --}}
                <input type="hidden" name="id" value="{{novedad.id}}">

                <div class="form-group mb-2">
                {{!-- 9.- Cambiamos el type a HIDDEN Agregamos en el INPUT el VALUES con la PROPIEDAD novedades --}}
                    <input type="text" class="form-control" placeholder="Título" name="titulo" value="{{novedad.titulo}}">
                </div>
                
                {{!-- 10.- Agregamos a todos los TEXTAREA  la PROPIEDAD novedades --}}
                <div class="form-group mb-2">
                    <textarea type="text" class="form-control" placeholder="Subtítulo" name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>

                <div class="form-group mb-2">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo" style="height: 100px">{{novedad.cuerpo}}</textarea>
                </div>

                <button type="submit" class="btn btn-primary">Modificar</button>

            </form>

            {{#if error}}
                <p>{{message}}</p>
            {{/if}}

        </div>
    </div>
</div>